<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="l2.ViewEditor">
  <ScrollViewer Name="scrollViewer" VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Hidden">
    <StackPanel>
      <Grid ColumnDefinitions="100,20,80,*" Name="itemGrid"/>
      <StackPanel Orientation="Horizontal">
        <Button Name="createView">Create view</Button>
        <TextBox Name="viewName"/>
      </StackPanel>
    </StackPanel>
  </ScrollViewer>
</UserControl>
